<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFA5"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Encabezado con título y botón volver -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📜 Historial Completo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9E9E9E"
            android:text="⬅️ Inicio"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Descripción -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Registro de todas las acciones realizadas"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- Botón de prueba -->
    <Button
        android:id="@+id/btnAddTestEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF5722"
        android:text="🧪 AGREGAR ENTRADA DE PRUEBA"
        android:textColor="#FFFFFF" />

    <!-- Debug info -->
    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Estado: Esperando datos..."
        android:textColor="#FFEB3B"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#33000000" />

    <!-- Lista de historial -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/historyListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>

