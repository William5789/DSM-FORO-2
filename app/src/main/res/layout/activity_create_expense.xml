<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFA5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Encabezado con título y botón volver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/etTitleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Registrar Nuevo Gasto"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnBackToHomeTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9E9E9E"
                android:text="⬅️ Inicio"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Nombre del gasto -->
        <EditText
            android:id="@+id/etExpenseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:hint="Nombre del gasto"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:backgroundTint="#FFFFFF" />

        <!-- Monto -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:hint="Monto (ej: $50.00)"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:backgroundTint="#FFFFFF" />

        <!-- Categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp" />

        <!-- Fecha -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />
            
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#2196F3"
            android:hint="Selecciona una fecha"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            tools:backgroundTint="#FFFFFF" />

        <!-- Botón Crear Gasto -->
        <Button
            android:id="@+id/btnCreateExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="✅ Registrar Gasto"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>

